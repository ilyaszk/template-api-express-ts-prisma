generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Genre {
  id      String   @id @default(cuid())
  name    String
  tracks  Track[]  @relation("genreToTracks")
}

model Track {
  id       String  @id @default(cuid())
  title    String
  genre    Genre   @relation("genreToTracks", fields: [genreId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  genreId  String
  album Album @relation("albumToTracks", fields: [albumId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  albumId String
}

model Album{
  id      String   @id @default(cuid())
  title   String
  tracks  Track[]  @relation("albumToTracks")
  artist  Artist   @relation("artistToAlbums", fields: [artistId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  artistId String
}

model Artist{
  id      String   @id @default(cuid())
  name    String
  album  Album[]  @relation("artistToAlbums")
}
